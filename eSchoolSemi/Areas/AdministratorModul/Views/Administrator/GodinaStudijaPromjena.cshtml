@model GodinaStudijaVM
@{
    ViewData["Title"] = "GodinaStudijaPromjena";
}





<div class="modal fade" id="promjeniGodinu" tabindex="-1" role="dialog" aria-labelledby="dodajOdljenjeLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title text-center" id="dodajOdljenjeLabel">Promjeni godinu studija</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="container-fluid">
                        <form asp-action="SnimiPromjenu" method="post">

                            <input asp-for="TretnutnaGodinaID" type="hidden" value="@Model.TretnutnaGodinaID" class="form-control" />

                            <div class="row">
                                <div class="col-xs-8 col-lg-8">
                                    <div class="form-group">
                                        <label asp-for="Opis"></label>
                                        <input asp-for="Opis" type="text" value="@Model.Opis" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-8 col-lg-8">
                                    <div class="form-group">
                                        <label asp-for="GodinaStudija"></label>
                                        <select asp-for="GodinaStudijaId" asp-items="@Model.GodinaStudija" class="form-control"></select>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-default">Promjeni</button>
                        </form>
                    </div>

                </div>
            </div>


        </div>
    </div>
</div>


