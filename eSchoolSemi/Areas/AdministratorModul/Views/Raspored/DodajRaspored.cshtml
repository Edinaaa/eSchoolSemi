@model RasporedDodajVM
@{
    ViewData["Title"] = "DodajRaspored";
}

<div class="modal fade" id="dodajRaspored" tabindex="-1" role="dialog" aria-labelledby="dodajNastavnikLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-center" id="dodajNastavnikLabel">Dodaj raspored!</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <form asp-action="SnimiRaspored" method="post">

                        <input asp-for="OdljenjeID" type="hidden" value="@Model.OdljenjeID" class="form-control" />

                        <div class="row">
                            <div class="form-group col-md-8 col-md-push-2">
                                <label asp-for="OdljenjeID">Odjeljenje</label>
                                <input asp-for="Oznaka" type="text" value="@Model.Oznaka" class="form-control" disabled />
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-8 col-md-push-2">
                                <label asp-for="RasporedNaziv">Naziv rasporeda:</label>
                                <input asp-for="RasporedNaziv" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-info" type="submit">Snimi</button>
                        </div>
                       
                    </form>

                </div>
            </div>

           
        </div>
    </div>
</div>


